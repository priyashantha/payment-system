FROM node:18-slim

WORKDIR /app

# Copy package files first (for better caching)
COPY package*.json ./

# Install dependencies inside Docker
RUN npm install

# Copy all remaining files
COPY . .

# Expose Vite port
EXPOSE 5173

# Run dev server on all interfaces (important!)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
